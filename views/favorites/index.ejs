<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>My Favorites</title>
  </head>
  <body>
    <%- include("../partials/_navbar.ejs") %>

    <main class="container">
      <h1>My Favorites</h1>

      <% if (!games || games.length === 0) { %>
        <section class="empty-state">
          <p class="empty-text">No favorites yet.</p>
          <a class="btn" href="/games">Browse games</a>
        </section>
      <% } else { %>
        <% const defaultCover = "https://placehold.co/150x150?text=Cover"; %>

        
          <% games.forEach(game => { %>
            <div class="favorite-container">
              <div class="info-container">
                <div>
                  <img
                    src="<%= game.coverImageUrl || defaultCover %>"
                    alt="<%= game.title %>"
                  />
                </div> 
                <div>
                  <p><strong>Genre:</strong> <%= game.genre %></p>
            
                  <% if (game.platform) { %>
                    <p><strong>Platform:</strong> <%= game.platform %></p>
                  <% } %>
            
                  <% if (game.releaseYear) { %>
                    <p><strong>Release Year:</strong> <%= game.releaseYear %></p>
                  <% } %>
            
                  <% if (game.description) { %>
                    <p><strong>Description:</strong> <%= game.description %></p>
                  <% } %>
                
                  <a href="/games/<%= game._id %>"><%= game.title %></a>

                </div>
              </div>
              <form action="/games/<%= game._id %>/unfavorite" method="POST">
                <input type="hidden" name="next" value="/favorites" />
                <button type="submit">‚≠ê Unfavorite</button>
              </form>
            </div>
          <% }) %>
      
      <% } %>
    </main>
  </body>
</html>
