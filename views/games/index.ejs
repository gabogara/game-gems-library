<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Games</title>
  </head>
  <body>
    <%- include("../partials/_navbar.ejs") %>

    <p><a href="/games/new">Add new game</a></p>

    <h1>My Games</h1>

    <% if (!games || games.length === 0) { %>
    <p>No games yet.</p>
    <% } else { %> <% const defaultCover =
    "https://placehold.co/150x150?text=Game+Cover"; %>
    <ul>
      <% games.forEach((game) => { %>
      <li>
        <% const isFav = favoriteIds && favoriteIds.includes(String(game._id));
        %> <% if (isFav) { %>
        <form
          action="/games/<%= game._id %>/unfavorite"
          method="POST"
          style="display: inline"
        >
          <input type="hidden" name="next" value="/games" />
          <button type="submit">★ Unfavorite</button>
        </form>
        <% } else { %>
        <form
          action="/games/<%= game._id %>/favorite"
          method="POST"
          style="display: inline"
        >
          <input type="hidden" name="next" value="/games" />
          <button type="submit">☆ Favorite</button>
        </form>
        <% } %>
        <img
          src="<%= game.coverImageUrl || defaultCover %>"
          alt="<%= game.title %>"
          width="150"
          height="150"
        />
        <a href="/games/<%= game._id %>"><%= game.title %></a>
        <a href="/games/<%= game._id %>/edit">Edit</a>

        <form
          action="/games/<%= game._id %>?_method=DELETE"
          method="POST"
          style="display: inline"
        >
          <button type="submit">Delete</button>
        </form>
      </li>
      <% }) %>
    </ul>
    <% } %>
  </body>
</html>
