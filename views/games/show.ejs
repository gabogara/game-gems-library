<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= game.title %></title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %> <% const defaultCover =
    "https://placehold.co/250x350?text=Game+Cover"; %>

    <h1><%= game.title %></h1>

    <% if (isFavorite) { %>
    <form
      action="/games/<%= game._id %>/unfavorite"
      method="POST"
      style="display: inline"
    >
      <button type="submit">★ Unfavorite</button>
    </form>
    <% } else { %>
    <form
      action="/games/<%= game._id %>/favorite"
      method="POST"
      style="display: inline"
    >
      <button type="submit">☆ Favorite</button>
    </form>
    <% } %>

    <p><strong>Genre:</strong> <%= game.genre %></p>

    <% if (game.platform) { %>
    <p><strong>Platform:</strong> <%= game.platform %></p>
    <% } %> <% if (game.releaseYear) { %>
    <p><strong>Release Year:</strong> <%= game.releaseYear %></p>
    <% } %> <% if (game.description) { %>
    <p><strong>Description:</strong> <%= game.description %></p>
    <% } %>

    <img
      src="<%= game.coverImageUrl || defaultCover %>"
      alt="<%= game.title %>"
      width="150"
      height="150"
    />

    <h2>Reviews</h2>

    <% if (myReview) { %>
    <p>You already left a review for this game.</p>
    <a href="/games/<%= game._id %>/reviews/<%= myReview._id %>/edit">
      Edit your review
    </a>
    <% } else { %>
    <h3>Leave a review</h3>

    <form action="/games/<%= game._id %>/reviews" method="POST">
      <label>
        Rating (1-5):
        <input type="number" name="rating" min="1" max="5" required />
      </label>

      <label>
        Comment:
        <textarea name="comment" required></textarea>
      </label>

      <button type="submit">Add review</button>
    </form>
    <% } %> <% if (!reviews || reviews.length === 0) { %>
    <p>No reviews yet.</p>
    <% } else { %>
    <h3>Player reviews:</h3>
    <ul>
      <% reviews.forEach((review) => { %>
      <li>
        <strong><%= review.rating %>/5</strong>
        — <%= review.comment %>

        <small>
          Reviewed on <%= review.createdAt ? review.createdAt.toDateString() :
          '' %>
        </small>

        <% if (review.author) { %> (by <%= review.author.username %>) <% } %> <%
        if (currentUser && review.author && String(review.author._id) ===
        String(currentUser._id)) { %>
        <form
          action="/games/<%= game._id %>/reviews/<%= review._id %>?_method=DELETE"
          method="POST"
          style="display: inline"
        >
          <button type="submit">Delete</button>
        </form>
        <% } %>
      </li>
      <% }) %>
    </ul>
    <% } %>

    <p><a href="/games">Back to My Games</a></p>
  </body>
</html>
