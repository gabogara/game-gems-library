<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Game Gems Library</title>
  </head>
  <body>
    <%- include('./partials/_navbar.ejs') %>

    <h1>Games by other users</h1>

    <% if (!games || games.length === 0) { %>
    <p>No games yet.</p>
    <% } else { %>
    <ul>
      <% games.forEach(game => { %>
      <li>
        <a href="/games/<%= game._id %>"><%= game.title %></a>
        <% if (game.coverImageUrl) { %>
        <img
          src="<%= game.coverImageUrl %>"
          alt="<%= game.title %>"
          width="150"
          height="150"
        />
        <% } %> <% if (game.owner) { %> â€” by <%= game.owner.username %> <% } %>
      </li>
      <% }) %>
    </ul>
    <% } %>
  </body>
</html>
