<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Game Gems Library</title>
  </head>
  <body>
    <%- include('./partials/_navbar.ejs') %>

    <h1>Games by other users</h1>

    <% if (!games || games.length === 0) { %>
    <p>No games yet.</p>
    <% } else { %> <% const defaultCover =
    "https://placehold.co/150x150?text=Game+Cover"; %>
    <ul>
      <% games.forEach(game => { %>
      <li>
        <% const isFav = favoriteIds && favoriteIds.includes(String(game._id));
        %> <% if (isFav) { %>
        <form
          action="/games/<%= game._id %>/unfavorite"
          method="POST"
          style="display: inline"
        >
          <input type="hidden" name="next" value="/" />
          <button type="submit">⭐ Unfavorite</button>
        </form>

        <% } else { %>
        <form
          action="/games/<%= game._id %>/favorite"
          method="POST"
          style="display: inline"
        >
          <input type="hidden" name="next" value="/" />
          <button type="submit">☆ Favorite</button>
        </form>

        <% } %>

        <a href="/games/<%= game._id %>"><%= game.title %></a>

        <img
          src="<%= game.coverImageUrl || defaultCover %>"
          alt="<%= game.title %>"
          width="150"
          height="150"
        />

        <% if (game.owner) { %> — by
        <a href="/users/<%= game.owner._id %>"><%= game.owner.username %></a> <%
        } %>
      </li>
      <% }) %>
    </ul>
    <% } %>
  </body>
</html>
