<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title><%= profileUser.username %>'s Profile</title>
  </head>
  <body>
    <%- include("../partials/_navbar.ejs") %>

    <main class="container">
      <h1><%= profileUser.username %>'s Profile</h1>
      <% if (currentUser && String(currentUser._id) === String(profileUser._id)) { %>
        <div class="top-actions">
          <a class="btn btn-primary" href="/users/me/edit">Edit profile</a>
        </div>
      <% } %>
      <% if (profileUser.bio) { %>
        <p><strong>Bio:</strong> <%= profileUser.bio %></p>
      <% } %>

      <% if (profileUser.favoriteGenre) { %>
        <p><strong>Favorite Genre:</strong> <%= profileUser.favoriteGenre %></p>
      <% } %>

      <h2>Games Added</h2>
      <% if (!games || games.length === 0) { %>
        <p>No games added yet.</p>
      <% } else { %>
        <% const defaultCover = "https://placehold.co/150x150?text=Game+Cover"; %>
          <% games.forEach(game => { %>
            <div class="favorite-container">
              <div class="info-container">
                <div>
                <a href="/games/<%= game._id %>">
                <img
                  class="game-cover"
                  src="<%= game.coverImageUrl || defaultCover %>"
                  alt="<%= game.title %>"
                />
              </a>
              </div>
                <div>
                  <a href="/games/<%= game._id %>"><%= game.title %></a>
                  <p><strong>Genre:</strong> <%= game.genre %></p>
            
                  <% if (game.platform) { %>
                    <p><strong>Platform:</strong> <%= game.platform %></p>
                  <% } %>
            
                  <% if (game.releaseYear) { %>
                    <p><strong>Release Year:</strong> <%= game.releaseYear %></p>
                  <% } %>
            
                  <% if (game.description) { %>
                    <p><strong>Description:</strong> <%= game.description %></p>
                  <% } %>
                </div>
              </div>
            <% }) %>
            </div>
      <% } %>

      <h2>Reviews Written</h2>
      <% if (!reviews || reviews.length === 0) { %>
        <p>No reviews written yet.</p>
      <% } else { %>
        <ul>
          <% reviews.forEach(review => { %>
            <li>
              <strong><%= review.rating %>/5</strong>
              â€” <%= review.comment %>
              <% if (review.game) { %>
                (on <a href="/games/<%= review.game._id %>"><%= review.game.title %></a>)
              <% } %>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </main>
  </body>
</html>